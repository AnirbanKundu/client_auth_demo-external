<!DOCTYPE html>
<html>
<head>
  <title>ShoCard Client Demo Site</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => false %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => false %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
  <div class="row header">
    <div class="col-md-12">
      <% if notice %>
        <p class="alert alert-success"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>
    </div>
  </div>

  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="#">
          Client Demo
        </a>
      </div>
      <div class="navbar-right">
        <%= link_to "My account", edit_user_registration_path, class: "btn btn-default navbar-btn" %>
        <%= link_to "Sign out", destroy_user_session_path, :method => :delete, class: "btn btn-default navbar-btn" %><br/>
      </div>

    </div>
  </nav>

  <div class="row">
    <div class="col-md-12">
      <%= yield %>
    </div>
  </div>

  <div class="row footer">
    <div class="col-md-12">
      <h5 class="pull-right">Powered by ShoCard</h5>
    </div>
  </div>

</div>

</body>
</html>
